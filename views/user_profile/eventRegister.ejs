<% include ../user_partials/header %>


 <!-- Content Wrapper. Contains page content -->
 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Register</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active"><%= eventInfo[0].event_name%></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form action="" method="post">
    <form class="content">
      <div class="row">
        <div class="col-md-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><%= eventInfo[0].event_name%></h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fas fa-minus"></i></button>
              </div>
            </div>
            <form action="/profile/<%= dict.id%>/register/<%= eventInfo[0].event_name%>" method="post">
            <div class="card-body">
            <%var count = 0; if(eventInfo[0].MemberTeams == 1){%>
                <div class="form-group">
                    <label for="inputName">Email</label>
                    <input type="email" id="inputName" class="form-control" name="TeamLeader">
                </div>
            <%}else {%>
                <%while(count != eventInfo[0].MemberTeams){ count++%>
                    <% if(count == 1){%>
                        <div class="form-group">
                            <label for="inputName">Email Leader</label>
                            <input type="email" id="inputName" class="form-control" name="TeamLeader">
                        </div>
                    <%}else{%>
                        <div class="form-group">
                            <label for="inputName">Email Member <%= count%></label>
                            <input type="email" id="inputName" class="form-control" name="TeamMember<%=count%>">
                        </div>
                    <%}%>
                <%}%>
            <%}%>
            <%if(error) { %>
              <div class="form-group">
                <label for="inputName" style="color: red;"><%= error %></label>
              </div>
            <% } %>
            <div class="row">
                <div class="col-12">
                <input type="submit" value="Register" class="btn btn-success float-right">
                </div>
            </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
    </form>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



<% include ../user_partials/footer %>